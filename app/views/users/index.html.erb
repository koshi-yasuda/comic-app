<h1>ユーザー一覧</h1>

<%= will_paginate @users, previous_label: "&lt 前へ", next_label: "次へ &gt" %>

<% @users.each do |user| %>
  <li>
    <%= link_to user.name, user_path(user) %>
    <%= image_tag user.image if user.image.attached? %>
    <% if current_user && current_user.admin? && (current_user != user) %>
      <%= link_to "削除", user_path(user), method: :delete, data: {confirm: "本当に削除してよろしいですか？" } %>
    <% end %>
  </li>
<% end %>

<%= will_paginate @users, previous_label: "&lt 前へ", next_label: "次へ &gt" %>
